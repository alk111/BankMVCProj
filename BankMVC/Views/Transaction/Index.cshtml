@model IEnumerable<BankMVC.ViewModels.TransactionVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-extra-large {
        padding: 7px 15px; /* Adjust padding to make the button extra-large */
        font-size: 16px; /* Adjust font size for better visibility */
    }
    h2 {
